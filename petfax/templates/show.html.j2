{% extends "base.html.j2" %}
{% block title %}{{ pet.pet_name }}{% endblock %}
{% block head %}
    {{ super() }}
{% endblock %}
{% block content %}
    <div class="page-contents">
        <h1>{{ pet.pet_name }}</h1>
        <hr>
        <div class="show-contents">
            <h4><b>Did you know?</b></h4>
            <p>{{ pet.pet_fact }}</p>
            <img class="pet-image" src="{{ pet.pet_photo }}" alt="Photo of {{ pet.pet_name }}" />
            <form action="/pets">
                <input class="back-btn" type="submit" value="Go Back">
            </form>
        </div>
    </div>
{% endblock %}